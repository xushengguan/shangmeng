/* pages/edit/edit_website.wxss */

@import "/com/com.wxss";
.publicity_pic {
    padding-top: 24rpx;
}

.publicity_pic view,
.publicity_pic image {
    width: 342rpx;
    height: 256rpx;
}

.publicity_pic view {
    margin-bottom: 24rpx;
}

.publicity_pic view:nth-of-type(2n) {
    margin-left: 18rpx;
}

.jump_pic {
    display: block;
    width: 342rpx;
    height: 256rpx;
    margin: 30rpx auto;
}


/* 联系我们 */

.box {
    height: 80rpx;
}

.box:nth-of-type(2) {
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
}

.box view {
    font-size: 28rpx;
    color: #333333;
}

.box input {
    margin-left: 30rpx;
    font-size: 28rpx;
}

.box .input_tips {
    font-size: 28rpx;
    color: #999999;
}

.box image:nth-of-type(1) {
    width: 27rpx;
    height: 28rpx;
    right: 0;
}

.box image:nth-of-type(2) {
    width: 36rpx;
    height: 36rpx;
    right: 0;
}


/* 保存 */

.btn {
    margin: 20rpx auto;
}