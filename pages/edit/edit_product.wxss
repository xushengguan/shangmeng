/* pages/edit/edit_product.wxss */
@import "/com/com.wxss";

page {
  background: #f5f5f5;
}

.box {
  font-size: 28rpx;
  color: #010101;
}

.box:nth-of-type(1) {
  border-top: 1px solid #e5e5e5;
}

.pic {
  display: block;
  width: 200rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.title view:nth-of-type(2) {
  margin-top: 25rpx;
  color: #ec132d;
}

.fun {
  height: 90rpx;
}

.select_icon {
  width: 21rpx;
  height: 21rpx;
  border-radius: 50%;
  margin: 0 12rpx;
}

.edit {
  margin-left: 273rpx;
}

.del {
  margin-left: 67rpx;
}

.edit image {
  width: 28rpx;
  height: 28rpx;
}

.del image {
  width: 30rpx;
  height: 32rpx;
}

.del span, .edit span {
  color: #333;
  margin-left: 9rpx;
}

.bigspace {
  background: #f5f5f5;
  height: 140rpx;
}

.save {
  background: #fff;
  padding: 10px 24rpx;
  position: fixed;
  bottom: 0;
}
