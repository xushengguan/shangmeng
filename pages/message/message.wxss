/* pages/message/message.wxss */

@import "/com/com.wxss";
page {
    background: #f5f5f5;
}


/* 搜索输入框 */

.input {
    background: #f5f5f5;
    height: 76rpx;
    width: 662rpx;
    padding: 0 20rpx;
    border-radius: 40rpx;
    font-size: 30rpx;
}


/* 搜索图标 */

.search_icon {
    font-size: 26rpx;
    color: #999;
    top: 20rpx;
}

.box {
    display: flex;
    align-items: center;
    position: relative;
    width: 100%;
    padding: 0;
}

.box:nth-last-of-type(1) {
    border-bottom: none;
}


/* 头像  */

.box image {
    width: 100rpx;
    height: 100rpx;
    line-height: 140rpx;
}


/* 消息 */

.message {
    width: 538rpx;
    margin-left: 20rpx;
}

.m_title {
    font-size: 30rpx;
    color: #333;
    width: 400rpx;
}

.m_text {
    font-size: 26rpx;
    color: #999;
    margin-top: 10rpx;
}


/* 时间 */

.time {
    right: 20rpx;
    /* top: 21rpx; */
    font-size: 26rpx;
    color: #999;
}

.circleicon {
    background: #e64340;
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    position: absolute;
    right: -4rpx;
    top: -4rpx;
}


/* 左滑样式 */

.items {
    width: 100%;
}

.item {
    position: relative;
    overflow: hidden;
    height: 140rpx;
}

.item:not(:last-child) {
    border-bottom: 2rpx solid #e5e5e5;
}

.inner {
    position: absolute;
    top: 0;
}

.inner.txt {
    width: 100%;
    height: 100%;
    z-index: 5;
    padding: 0 24rpx;
    transition: left 0.2s ease-in-out;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    background: #fff;
    box-sizing: border-box;
}

.inner.del {
    background-color: #e64340;
    width: 180rpx;
    text-align: center;
    z-index: 4;
    right: 0;
    color: #fff;
    height: 140rpx;
    line-height: 140rpx;
}