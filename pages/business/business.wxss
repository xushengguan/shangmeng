/* pages/business/business.wxss */

@import "/com/com.wxss";

/* 搜索输入框 */

page {
    background: #f5f5f5;
}

.contentbg {
    background: #fff;
}

.box {
    display: flex;
    flex-direction: column;
}

.flex1 {
    flex: 1;
}

.input {
    background: #f5f5f5;
    height: 76rpx;
    width: 100%;
    padding: 0 20rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
    box-sizing: border-box;
}


/* 搜索图标 */

.search_icon {
    font-size: 26rpx;
    color: #999;
    top: 20rpx;
}

.item {
    height: 100rpx;
}

.item_icon {
    display: block;
    width: 34rpx;
    height: 25rpx;
}

.item_pic {
    display: block;
    width: 34rpx;
    height: 28rpx;
}

.item_text {
    margin-right: 27rpx;
    text-align: right;
}


/* 导航 */

.nav {
    background: #f5f5f5;
    height: 98rpx;
    padding: 0 53rpx;
    text-align: center;
    font-size: 26rpx;
}

.nav_item {
    color: #333;
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 25rpx;
    margin-left: 15rpx;
}

.item_active {
    color: #fff;
    background: #46c01b;
    box-shadow: 0px 0px 8rpx 2rpx rgba(70, 192, 27, 0.52);
}

.nav_item:nth-of-type(1) {
    margin-left: 0rpx;
}

.scroll-view-Y {
    height: 593rpx;
    overflow: scroll;
    background: #f5f5f5;
    box-sizing: border-box;
}

.scroll-Y-item {
    width: 100%;
    height: 180rpx;
    color: #666;
    font-size: 24rpx;
    border-bottom: 1px solid #e5e5e5;
    background: #fff;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.scroll-Y-item:last-child {
    border-bottom: none;
}

.head_pic {
    display: block;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.info {
    margin-left: 17rpx;
    flex: 1;
}

.collect {
    text-align: center;
}

.collect image {
    width: 36rpx;
    height: 34rpx;
}

.font {
    font-size: 28rpx;
    color: #333;
}

.sfont {
    color: #666;
    font-size: 26rpx;
}

.bfont {
    font-size: 30rpx;
    color: #010101;
}

.mfont {
    font-size: 26rpx;
    color: #999;
}