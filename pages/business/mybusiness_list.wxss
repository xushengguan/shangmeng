/* pages/business/mybusiness_list.wxss */

@import "/com/com.wxss";
page {
    background: #f5f5f5;
}

.box {
    height: 168rpx;
    background: #fff;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.pic {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.button_btn {
    width: 126rpx;
    height: 50rpx;
    border-radius: 25rpx;
    font-size: 28rpx;
    border: 1px solid #46C01B;
    color: #46C01B;
    right: 20rpx;
    bottom: 90rpx;
}

.button_btn image,
.box_btn image {
    width: 22rpx;
    height: 23rpx;
    margin-right: 6rpx;
}

.bottom_pic {
    bottom: 45rpx;
    right: 20rpx;
}

.box_info {
    height: 90rpx;
    padding: 0 20rpx;
    background: #fff;
    border-bottom: 1px solid #e5e5e5;
}

.box_info:nth-of-type(1) {
    border-bottom: 0px;
}

.circle_pic {
    display: block;
    width: 43rpx;
    height: 30rpx;
}

.box_btn {
    width: 126rpx;
    height: 50rpx;
    border-radius: 25rpx;
    font-size: 28rpx;
    border: 1px solid #46C01B;
    color: #46C01B;
}


/* 搜索输入框 */

.input {
    background: #fff;
    height: 76rpx;
    width: 662rpx;
    padding: 0 20rpx;
    border-radius: 40rpx;
    font-size: 30rpx;
}


/* 搜索图标 */

.search_icon {
    font-size: 26rpx;
    color: #999;
    top: 40rpx;
}

.scroll-view-Y {
    width: 702rpx;
    margin: 0 auto;
    height: 593rpx;
    overflow: scroll;
}

.scroll-Y-item {
    height: 180rpx;
    color: #666666;
    font-size: 24rpx;
    border-top: 1px solid #e5e5e5;
}

.head_pic {
    display: block;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.info {
    margin-left: 17rpx;
    width: 520rpx;
}

.collect {
    width: 90rpx;
    text-align: center;
}

.collect image {
    width: 36rpx;
    height: 34rpx;
}

.sfont {
    color: #666;
    font-size: 26rpx;
}

.bfont {
    font-size: 30rpx;
    color: #010101;
}